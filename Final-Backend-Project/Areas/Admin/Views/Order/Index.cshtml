@using Service.ViewModels.Order
@model List<OrderVM>


<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h1> Order </h1>
          
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Total Price
                            </th>
                           
                            <th>
                                Oparetions
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var expert in Model)
                        {
                            <tr>
                                <td>
                                    @expert.Name

                                </td>
                               
                                <td>
                                    @expert.Email

                                </td>

                                <td>
                                    @expert.TotalPrice
                                </td>

                                <td>
                                   
                                    <a asp-action="Delete" asp-route-id="@expert.Id" style="display:inline-block; background-color:#dc3545; color:white; padding:10px 20px; text-decoration:none; border-radius:6px; font-weight:bold;">
                                        Delete
                                    </a>

                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>