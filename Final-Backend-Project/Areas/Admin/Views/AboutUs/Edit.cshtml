@using Service.Dtos.AboutUs
@model AboutUsEditVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">

            </p>
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="forms-sample">

                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">BoldWrite</label>
                    <input asp-for="BoldWrite" type="text" class="form-control" id="exampleInputName1" placeholder="Bold Write">
                    <span asp-validation-for="BoldWrite" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputName1" placeholder="Bold Write">
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Button</label>
                    <input asp-for="Button" type="text" class="form-control" id="exampleInputName1" placeholder="Button">
                    <span asp-validation-for="Button" class="text-danger"></span>

                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload</label>
                    <input asp-for="ImageUrl" type="file" class="form-control" id="inputGroupFile01" />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

                <!-- Araya boşluq əlavə edirik -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </div>

            </form>
        </div>
    </div>
</div>