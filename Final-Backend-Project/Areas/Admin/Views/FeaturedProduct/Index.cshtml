@using Service.ViewModels.FeaturedProduct
@model List<FeaturedProductVM>

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h1> FeaturedProduct </h1>

            @if (Model == null || !Model.Any())
            {
                <a asp-action="Create" style="display: inline-block; background-color: #28a745; color: white; padding: 10px 20px; text-decoration: none; border-radius: 6px; font-weight: bold;">
                    Create
                </a>
            }
           
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                DiscountedPrice
                            </th>
                            <th>
                                OriginalPrice
                            </th>
                            <th>
                                Oparetions
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@product.ProductImageUrl" alt="image" />
                                </td>
                                <td>
                                    @product.ProductName

                                </td>


                                <td>
                                    @product.DiscountedPrice;
                                </td>
                                <td>
                                    @product.OrginalPrice;
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@product.Id" style="display:inline-block; background-color:#ffc107; color:black; padding:10px 20px; text-decoration:none; border-radius:6px; font-weight:bold;">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" style="display:inline-block; background-color:#dc3545; color:white; padding:10px 20px; text-decoration:none; border-radius:6px; font-weight:bold;">
                                        Delete
                                    </a>

                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>