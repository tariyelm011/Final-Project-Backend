@model Service.Dtos.Category.CategoryVM

<section class="category-detail-section d-flex align-items-center justify-content-center">
    <div class="glass-category-card text-white text-center p-5 rounded-4 shadow-lg w-100">
        <h1 class="mb-4">@Model.Name</h1>

        <img src="@Model.ImageUrl"
             alt="@Model.Name"
             class="img-fluid rounded-4 border border-light-subtle mb-4"
             style="max-height: 400px; object-fit: contain;" />

        <div class="row justify-content-center">
            <div class="col-md-6 text-start">
                <p><strong>create date:</strong> @(Model.CreatedDate?.ToString("dd.MM.yyyy") ?? "Yoxdur")</p>
                <p><strong>update date:</strong> @(Model.EditDate?.ToString("dd.MM.yyyy") ?? "Yoxdur")</p>
            </div>
        </div>
    </div>
</section>

<style>
    .category-detail-section {
        background: linear-gradient(135deg, #7f5af0, #a78bfa);
        min-height: 100vh;
        width: 100%;
    }

    .glass-category-card {
        background: rgba(255, 255, 255, 0.07);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        max-width: 100%;
    }

    h1 {
        font-size: 3rem;
        font-weight: 800;
    }

    p {
        font-size: 1.2rem;
        line-height: 1.7;
    }
</style>
