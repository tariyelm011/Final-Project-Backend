@using Service.Dtos.Subscribe
@model List<SubscribeVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>Subscribe</h1>

            <div class="table-responsive">
                <table class="table table-striped" style="table-layout: fixed; width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 20%;">Email</th>
                            <th style="width: 60%;">Date</th>
                            <th style="width: 20%;">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subscribe in Model)
                        {
                            <tr>
                                <td style="word-break: break-word;">
                                    @subscribe.Email
                                </td>
                                <td style="word-break: break-word; white-space: normal;">
                                    @subscribe.CreatedDate
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@subscribe.Id" style="display:inline-block; background-color:#dc3545; color:white; padding:10px 20px; text-decoration:none; border-radius:6px; font-weight:bold;">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
