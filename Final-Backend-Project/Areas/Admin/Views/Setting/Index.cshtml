@using Service.Dtos.Setting
@model List<SettingVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>Setting</h1>

            <div class="table-responsive">
                <table class="table table-striped" style="table-layout: fixed; width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 20%;">Key</th>
                            <th style="width: 60%;">Value</th>
                            <th style="width: 20%;">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var setting in Model)
                        {
                            <tr>
                                <td style="word-break: break-word;">
                                    @setting.Key
                                </td>
                                <td style="word-break: break-word; white-space: normal;">
                                    @setting.Value
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@setting.Id"
                                       style="display: inline-block; background-color: #ffc107; color: black; padding: 10px 20px; text-decoration: none; border-radius: 6px; font-weight: bold;">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
