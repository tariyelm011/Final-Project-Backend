@model Service.Dtos.Blog.BlogVM



<section class="blog-detail-section py-5">
    <div class="container">
        <div class="glass-blog-card p-5 rounded-4 shadow-lg text-white">
            <h1 class="mb-3">@Model.Title</h1>
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <span class="fw-semibold">writter:</span> @Model.AppUser.FullName
                </div>
                <div>
                    <span class="fw-semibold">Tarix:</span> @(Model.CreatedDate?.ToString("dd.MM.yyyy") ?? "N/A")
                </div>
            </div>

            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded-4 mb-4 border border-light-subtle" style="max-height: 400px; object-fit: cover; width: 100%;" />

            <h5 class="text-warning mb-2 description-clamp">@Model.Description</h5>

            <p class="fs-5 mt-3" style="line-height: 1.8; text-align: justify;">
                @Html.Raw(Model.Content)
            </p>
        </div>
    </div>
</section>

<style>
    .blog-detail-section {
        background: linear-gradient(135deg, #7f5af0, #a78bfa);
        min-height: 100vh;
    }

    .glass-blog-card {
        background: rgba(255, 255, 255, 0.07);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.15);
    }

    h1, h5 {
        font-weight: 700;
    }

    .description-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

 
</style>
