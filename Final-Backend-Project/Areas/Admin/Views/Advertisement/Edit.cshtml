@using Service.Dtos.Advertisement
@model AdvertisementEditVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">

            </p>
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="forms-sample">

                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label for="exampleInputName1">YoutubeLink</label>
                    <input asp-for="YoutubeLink" type="text" class="form-control" id="exampleInputName1" placeholder="YoutubeLink">
                    <span asp-validation-for="YoutubeLink" class="text-danger"></span>

                </div>



                <!-- Araya boşluq əlavə edirik -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </div>

            </form>
        </div>
    </div>
</div>