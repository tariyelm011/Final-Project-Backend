@using Service.Dtos.Advertisement
@model List<AdvertisementVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>Advertisement</h1>

            <div class="table-responsive">
                <table class="table table-striped" style="table-layout: fixed; width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 20%;">Title</th>
                            <th style="width: 60%;">YoutubeLink</th>
                            <th style="width: 20%;">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var advertisement in Model)
                        {
                            <tr>
                                <td style="word-break: break-word;">
                                    @advertisement.Title
                                </td>
                                <td style="word-break: break-word; white-space: normal;">
                                    @advertisement.YoutubeLink
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@advertisement.Id" style="display:inline-block; background-color:#ffc107; color:black; padding:10px 20px; text-decoration:none; border-radius:6px; font-weight:bold;">
                                        Detail
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@advertisement.Id"
                                       style="display: inline-block; background-color: #ffc107; color: black; padding: 10px 20px; text-decoration: none; border-radius: 6px; font-weight: bold;">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
