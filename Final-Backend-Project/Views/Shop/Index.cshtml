                                </div>
                            </div>
                            <div class="shop-product-items">
                                <div class="container-xl">
                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 g-4">

                                        @foreach (var product in Model.Products.Datas)
                                        {
                                            <div class="col">
                                                <div class="card">
                                                    <a href="#"><img href src="@product.ImageUrl" class="card-img-top" alt="..."></a>
                                                    <div class="cart-shortcut">
                                                        <ul>
                                                            <li><button><i class="bi bi-heart"></i></button></li>
                                                            <li><button><i class="bi bi-eye"></i></button></li>
                                                            <li><button><i class="bi bi-basket2-fill"></i></button></li>
                                                        </ul>
                                                    </div>
                                                    <div class="card-body">
                                                       
                                                        <h5 class="card-title">@product.Name</h5>
                                                        <p class="card-text">@product.Price</p>
                                                    </div>
                                                </div>
                                            </div>


                                        }
                                    
                                    </div>
                                    <div class="col-12">
                                        <div class="shop-pagination">
                                            <div aria-label="Page navigation">
                                                <ul class="pagination custom-pagination">
                                                    @* Previous Button *@
                                                    <li class="page-item @(Model.Products.HasPrevious ? "" : "disabled")">
                                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Products.CurrentPage - 1 })">Prev</a>
                                                    </li>

                                                    @* Page Numbers *@
                                                    @for (int i = 1; i <= Model.Products.TotalPage; i++)
                                                    {
                                                        <li class="page-item @(i == Model.Products.CurrentPage ? "active" : "")">
                                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                                        </li>
                                                    }

                                                    @* Next Button *@
                                                    <li class="page-item @(Model.Products.HasNext ? "" : "disabled")">
                                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Products.CurrentPage + 1 })">Next</a>
                                                    </li>
                                                </ul>
