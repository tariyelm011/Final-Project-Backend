<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Assets/CSS/style.css" />
    <title>Parfume Store</title>
</head>

<body>
    <header class="navbar">
        <div class="container-xl">
            <div class="row">
                <div class="col-12 sub-search hidden">
                    <div id="" class="sidebar-box search-form-wrap">
                        <form action="#" class="search-form">
                            <div class="form-group">
                                <input type="text"
                                       class="form-control"
                                       id="s"
                                       placeholder="Searh our store" />
                                <button type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                            <button onclick="hiddensearch()"><i class="bi bi-x-lg"></i></button>
                        </form>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row navbar-largsize">
                        <div class="navbar-left col-4 col-sm-4 col-md-4 col-lg-5">
                            <button class="mobile-menu-btn" id="openSidebarBtn">
                                <i class="bi bi-list"></i>
                            </button>
                            <ul class="desktop-menu">
                                <li><a href="./Home.html">Home</a></li>
                                <li><a href="./Shop.html">Shop</a></li>
                                <li><a href="./Blog.html">Blog</a></li>
                                <li><a href="./AboutUs.html">About Us</a></li>
                                <li><a href="./Contact.html">Contact</a></li>
                            </ul>
                        </div>
                        <div class="navbar-center col-4 col-sm-4 col-md-4 col-lg-2">
                            <a href="./Home.html">
                                <img src="~/Assets/İMG/Navbar/Logo/logo.png" alt="Logo" />
                            </a>
                        </div>
                        <div class="navbar-right col-4 col-sm-4 col-md-4 col-lg-5">
                            <div class="search-bar">
                                <div class="input-group">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Search our store"
                                           aria-label="Search" />
                                    <button class="btn search-btn" type="button">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                            <button onclick="shownsearch()" class="small-navbar-search">
                                <i class="bi bi-search"></i>
                            </button>
                            <a href="./Login.html" class="navbar-login">
                                <i class="bi bi-person"></i>
                            </a>
                            <a href="./Wishlist.html" class="navbar-wishlist"><i class="bi bi-heart"></i><span>3</span></a>
                            <a href="./Card.html" class="navbar-cart"><i class="bi bi-basket-fill"></i><span>0</span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="offcanvas-menu" id="sidebarMenu">
                <div class="offcanvas-header">
                    <div class="logo">
                        <img src="~/Assets/İMG/Navbar/Logo/logo.png"
                             alt="Arome Perfume Shop" />
                    </div>
                    <button type="button"
                            class="btn-close"
                            id="closeSidebarBtn"
                            aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="offcanvas-body">
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="./Home.html" class="nav-link">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a href="./Shop.html" class="nav-link">SHOP</a>
                        </li>
                        <li class="nav-item">
                            <a href="./Blog.html" class="nav-link">BLOG</a>
                        </li>
                        <li class="nav-item">
                            <a href="./AboutUs.html" class="nav-link">ABOUT US</a>
                        </li>
                        <li class="nav-item">
                            <a href="./Contact.html" class="nav-link">CONTACT</a>
                        </li>
                    </ul>
                    <div class="login-section">
                        <a href="./Login.html" class="login-link">
                            <i class="bi bi-person"></i> LOG IN / REGISTER
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
            @RenderBody()
    <footer class="footer">
        <div class="container-xl">
            <div class="row">
                <div class="col-12">
                    <div class="row footer-title">
                        <div class="col-12 col-sm-6 col-md-3 lg-3">
                            <h2>Contact <span class="footer-toggle-icon d-block d-md-none">+</span></h2>
                            <div class="footer-attachment">
                                <div class="attachment-addres">
                                    <p>
                                        Arome® was founded on the belief that wellness is more than just a necessity—it's
                                        a powerful expression of self-care and vitality.
                                    </p>
                                </div>
                                <div class="attachment-sosial">
                                    <ul>
                                        <li><a href=""><i class="bi bi-instagram"></i></a></li>
                                        <li><a href=""><i class="bi bi-facebook"></i></a></li>
                                        <li><a href=""><i class="bi bi-snapchat"></i></a></li>
                                        <li><a href=""><i class="bi bi-pinterest"></i></a></li>
                                        <li><a href=""><i class="bi bi-telegram"></i></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 lg-3">
                            <h2>Useful Links <span class="footer-toggle-icon d-block d-md-none">+</span></h2>
                            <div class="footer-attachment">
                                <div class="attachment-list">
                                    <ul>
                                        <li><span class="line-expand"></span><a href="">My Account</a></li>
                                        <li><span class="line-expand"></span><a href="">Shopping Cart</a></li>
                                        <li><span class="line-expand"></span><a href="">My Wishlist</a></li>
                                        <li><span class="line-expand"></span><a href="">Our Store Info</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 lg-3">
                            <h2>Information <span class="footer-toggle-icon d-block d-md-none">+</span></h2>
                            <div class="footer-attachment">
                                <div class="attachment-list">
                                    <ul>
                                        <li><span class="line-expand"></span><a href="">My Account</a></li>
                                        <li><span class="line-expand"></span><a href="">Shopping Cart</a></li>
                                        <li><span class="line-expand"></span><a href="">My Wishlist</a></li>
                                        <li><span class="line-expand"></span><a href="">Our Store Info</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 lg-3">
                            <h2>Newsletter <span class="footer-toggle-icon d-block d-md-none">+</span></h2>
                            <div class="footer-attachment">
                                <div class="attachment-addres">
                                    <p>Subscribe to our newsletter to receive news on update.</p>
                                </div>
                                <div class="attachment-input">
                                    <div class="email-input-wrapper">
                                        <div class="input-group custom-email-group">
                                            <input type="email" class="form-control email-input"
                                                   placeholder="Enter your email" aria-label="Email">
                                            <button class="btn send-btn" type="button">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row footer-copyright">
                        <div class="col-6">
                            <ul>
                                <li><img src="~/Assets/İMG/Footer/Card/visa.png" alt=""></li>
                                <li><img src="~/Assets/İMG/Footer/Card/master.png" alt=""></li>
                                <li><img src="~/Assets/İMG/Footer/Card/paypal.png" alt=""></li>
                                <li><img src="~/Assets/İMG/Footer/Card/disc.png" alt=""></li>
                                <li><img src="~/Assets/İMG/Footer/Card/amex.png" alt=""></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <p>
                                © 2025 , Tariyel
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.6/js/bootstrap.bundle.min.js"></script>
<script src="~/Assets/JS/Navbar.js"></script>
<script src="~/Assets/JS/Login.js"></script>
<script src="~/Assets/JS/Footer.js"></script>

</html>